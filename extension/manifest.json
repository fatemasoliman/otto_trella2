{
  "manifest_version": 3,
  "name": "OttoFill - Load Creation Assistant",
  "version": "1.0",
  "description": "Load creation assistant",
  "permissions": [
    "storage",  
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://ec2-13-51-0-115.eu-north-1.compute.amazonaws.com:8080/*",
    "ws://ec2-13-51-0-115.eu-north-1.compute.amazonaws.com:8080/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "logo.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["drawer.css"]
    }
  ]
}